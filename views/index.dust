<!DOCTYPE html>
<html>
    <head>
        <title>{title}</title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
    </head>
    <body onload="init()">
        <nav class="menu">
          <!-- content of the menu (like "raise your hand button" and login) -->
          <a class="logo" href="/">
            <img src="/images/logo.png" alt="DevAsq++ Logo">
          </a>
          <div class="profile">
            {?loggedUser}
              {> "partials/loggedUser" /}
            {:else}
              <a href="/login">Login</a>
            {/loggedUser}
          </div>
        </nav>

        <div id="home" class="container">
          <div class="header">
            <div class="title">
              <img src="/images/logo.png" alt="DevAsq++ Logo">
              <p class="subtitle"> Do together. Learn together. </p>
            </div>
          </div>
          <script src="/scripts/fetch.js" charset="utf-8"></script>
          <div class="manage-rooms">
            {> "partials/rooms" /}
          </div>
        </div>


        <script src="/scripts/ace/ace.js" charset="utf-8"></script>
        <script src="/socket.io/socket.io.js"></script>
        <script src="/scripts/ace/ext-language_tools.js" charset="utf-8"></script>
        <script src="/scripts/main.js" charset="utf-8"></script>
    </body>
</html>
