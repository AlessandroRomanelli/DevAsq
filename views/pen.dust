<!DOCTYPE html>
<html>
    <head>
        <title>{title}</title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
    </head>
    <body onload="init()">
      <div class="container">
        <div class="codePane">
          <h1> HTML Pen </h1>
          <div id="htmlPen" contenteditable="true"></div>
        </div>
        <div class="codePane">
          <h1> CSS Pen </h1>
          <div id="cssPen" contenteditable="true"></div>
        </div>
        <div class="codePane">
          <h1> JS Pen </h1>
          <div id="jsPen" contenteditable="true"></div>
        </div>
      <div>

        <iframe id="iFrame" src="preview.html"></iframe>

        <div id="menu">
          <!-- content of the menu (like "raise your hand button" and login) -->
          <div id="loggedUser">
            {> "partials/loggedUser" /}
          </div>
        </div>

        <!-- tabs go here programmatically -->

        <script src="/scripts/ace/ace.js" charset="utf-8"></script>
        <script src="/scripts/ace/ext-language_tools.js" charset="utf-8"></script>
        <script src="/scripts/fetch.js" charset="utf-8"></script>
        <script src="/scripts/main.js" charset="utf-8"></script>
        <script src="/scripts/parser.js" charset="utf-8"></script>
    </body>
</html>
